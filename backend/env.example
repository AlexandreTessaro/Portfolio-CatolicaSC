# Configurações do Servidor
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Configurações do Banco de Dados PostgreSQL
# Para desenvolvimento local (PostgreSQL local)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=gajseEwNF2KO0a2KfW1w
DB_NAME=portfolio-catolicasc
DB_SSL=false

# Para produção (usar DATABASE_URL)
# DATABASE_URL=postgresql://user:password@host:5432/dbname
# Exemplo: DATABASE_URL=postgresql://myuser:mypassword@myhost.com:5432/mydb

# Connection Pooling (Otimização para 1000+ usuários simultâneos)
DB_POOL_MAX=100              # Máximo de conexões no pool (produção: 100, dev: 50)
DB_POOL_MIN=10               # Mínimo de conexões mantidas (produção: 10, dev: 5)
DB_POOL_IDLE_TIMEOUT=30000   # Timeout para conexões idle em ms
DB_POOL_CONNECTION_TIMEOUT=30000  # Timeout para criar conexão em ms

# Configurações do Redis
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Configurações JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-in-production

# Configurações de Segurança
BCRYPT_SALT_ROUNDS=12

# Configurações de Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configurações Firebase (OAuth 2.0 Simplificado)
# Firebase Project ID
FIREBASE_PROJECT_ID=your-firebase-project-id

# Firebase Admin SDK (Service Account)
# Opção 1: JSON completo como string (recomendado para produção)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}

# Opção 2: Variáveis individuais (alternativa)
# FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# SonarQube / SonarCloud (Opcional - para análise local)
# SONAR_TOKEN=your-sonar-token
# SONAR_HOST_URL=https://sonarcloud.io
# SONAR_ORGANIZATION=your-organization
