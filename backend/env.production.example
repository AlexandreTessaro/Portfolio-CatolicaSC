# Configurações do Servidor - PRODUÇÃO
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://your-frontend-domain.com

# Configurações do Banco de Dados PostgreSQL - PRODUÇÃO
# Use DATABASE_URL para produção (recomendado)
DATABASE_URL=postgresql://username:password@host:5432/database_name

# Exemplo para diferentes provedores:
# AWS RDS: postgresql://username:password@your-rds-endpoint.region.rds.amazonaws.com:5432/database_name
# Google Cloud SQL: postgresql://username:password@your-instance-ip:5432/database_name
# DigitalOcean: postgresql://username:password@your-db-endpoint:5432/database_name
# Railway: postgresql://username:password@your-railway-endpoint:5432/database_name

# Configurações do Redis - PRODUÇÃO
REDIS_URL=redis://your-redis-host:6379
# Ou para Redis na nuvem:
# REDIS_URL=rediss://username:password@your-redis-endpoint:6379

# Configurações JWT - PRODUÇÃO (ALTERE ESTES VALORES!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-in-production

# Configurações de Segurança
BCRYPT_SALT_ROUNDS=12

# Configurações de Email - PRODUÇÃO
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Configurações de Log - PRODUÇÃO
LOG_LEVEL=info
LOG_FILE=logs/app.log
